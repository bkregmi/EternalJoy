<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundGravity="top|left"
    tools:context="com.example.eternaljoy.MainActivity">

    <Button
        android:id="@+id/dailyPrayers"
        android:layout_width="95dp"
        android:layout_height="49dp"
        android:onClick="sendMessage"
        android:text="@string/daily_prayers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewMainDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="#FFFFFF"
        android:scrollbars="vertical"
        android:text="@string/main_diplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDhyanam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:text="@string/btn_dhayanam"
        app:layout_constraintStart_toEndOf="@+id/dailyPrayers"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnInvocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:text="@string/btn_invocation"
        app:layout_constraintStart_toEndOf="@+id/btnDhyanam"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:text="@string/btn_gita"
        app:layout_constraintStart_toEndOf="@+id/btnInvocation"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>